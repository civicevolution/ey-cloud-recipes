check process <%= @worker_name %>
  with pidfile /var/run/<%= @worker_name %>.pid
  start program = "/usr/bin/env RAILS_ENV=production /data/<%=@app_name %>/current/script/delayed_job start"
  stop program = "/usr/bin/env RAILS_ENV=production /data/<%=@app_name %>/current/script/delayed_job stop"
	if totalmem is greater than 60 MB for 2 cycles then restart      # eating up memory?
